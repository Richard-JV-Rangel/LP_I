                            <children>
                                <Label styleClass="section-title-label" text="Classe: Pianista" />
                                <Button onAction="#handleTocarMusica" text="Executar tocarMusica()" />
                                <Button onAction="#handleImprovisar" text="Executar improvisar()" />
                                <Button onAction="#handleVirarDeCostas"
                                    text="Executar virarDeCostas()" />
                            </children>
                        </VBox>
