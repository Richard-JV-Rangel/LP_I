<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.projeto.controler.JornalController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0"
            AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label styleClass="title-label" text="Modelagem: Jornal Flutuante" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="section-pane">
                            <children>
                                <Label styleClass="section-title-label" text="Classe: Jornal" />
                                <Button onAction="#handleFlutuar" text="Executar flutuar()" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="section-pane">
                            <children>
                                <Label styleClass="section-title-label" text="Classe: Cidade" />
                                <Button onAction="#handleSerTuristica"
                                    text="Executar serTuristica()" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="section-pane">
                            <children>
                                <Label styleClass="section-title-label" text="Classe: CorpoDeAgua" />
                                <Button onAction="#handleMovimentarAgua"
                                    text="Executar movimentar()" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label styleClass="section-title-label" text="Console de Resultados:">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="outputArea" editable="false" prefHeight="350.0" wrapText="true" />
            </children>
        </VBox>
    </children>
</AnchorPane>