<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atividade.e2.controller.MainController">
    <children>
        <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>

                <Tab text="Músicos">
                    <content>
                        <VBox spacing="15.0">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <children>
                                <Label styleClass="titulo-secao" text="Gerenciar Músicos" />

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <TextField fx:id="txtNomeMusico" promptText="Nome do Artista" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="txtSentimento" promptText="Sentimento (ex: Amor)" prefWidth="250"/>
                                    <TextField fx:id="txtPapel" promptText="Papel (ex: Vocalista)" prefWidth="200"/>
                                </HBox>

                                <HBox spacing="10.0">
                                    <Button text="Salvar" onAction="#btnSalvarMusico" styleClass="button, btn-salvar"/>
                                    <Button text="Editar" onAction="#btnEditarMusico" styleClass="button, btn-editar"/>
                                    <Button text="Excluir" onAction="#btnExcluirMusico" styleClass="button, btn-excluir"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Executar Cantar()" onAction="#btnAcaoMusico" styleClass="button, btn-acao"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Limpar Campos" onAction="#btnLimparMusico" styleClass="button, btn-limpar"/>
                                </HBox>

                                <Label fx:id="lblMsgMusico" style="-fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                                <TableView fx:id="tabMusico" VBox.vgrow="ALWAYS" onMouseClicked="#selecionarMusico">
                                    <columns>
                                        <TableColumn fx:id="colIdMusico" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="colNomeMusico" text="Nome" prefWidth="300.0" />
                                        <TableColumn fx:id="colSentimento" text="Sentimento" prefWidth="200.0" />
                                        <TableColumn fx:id="colPapel" text="Papel" prefWidth="200.0" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Instrumentos">
                    <content>
                        <VBox spacing="15.0">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <children>
                                <Label styleClass="titulo-secao" text="Gerenciar Instrumentos" />

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <TextField fx:id="txtTipoInst" promptText="Tipo (Ex: Guitarra)" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="txtMarcaInst" promptText="Marca" prefWidth="250"/>
                                    <TextField fx:id="txtPrecoInst" promptText="Preço (R$)" prefWidth="150"/>
                                </HBox>

                                <HBox spacing="10.0">
                                    <Button text="Salvar" onAction="#btnSalvarInst" styleClass="button, btn-salvar"/>
                                    <Button text="Editar" onAction="#btnEditarInst" styleClass="button, btn-editar"/>
                                    <Button text="Excluir" onAction="#btnExcluirInst" styleClass="button, btn-excluir"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Executar Tocar()" onAction="#btnAcaoInst" styleClass="button, btn-acao"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Limpar" onAction="#btnLimparInst" styleClass="button, btn-limpar"/>
                                </HBox>

                                <Label fx:id="lblMsgInst" style="-fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                                <TableView fx:id="tabInst" VBox.vgrow="ALWAYS" onMouseClicked="#selecionarInst">
                                    <columns>
                                        <TableColumn fx:id="colIdInst" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="colTipoInst" text="Tipo" />
                                        <TableColumn fx:id="colMarcaInst" text="Marca" />
                                        <TableColumn fx:id="colPrecoInst" text="Preço" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Crimes">
                    <content>
                        <VBox spacing="15.0">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <children>
                                <Label styleClass="titulo-secao" text="Gerenciar Crimes (Narrativa)" />

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <TextField fx:id="txtTipoCrime" promptText="Tipo do Crime" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="txtLocalCrime" promptText="Local do Ocorrido" prefWidth="250"/>
                                    <TextField fx:id="txtPenaCrime" promptText="Pena (Anos)" prefWidth="150"/>
                                </HBox>

                                <HBox spacing="10.0">
                                    <Button text="Salvar" onAction="#btnSalvarCrime" styleClass="button, btn-salvar"/>
                                    <Button text="Editar" onAction="#btnEditarCrime" styleClass="button, btn-editar"/>
                                    <Button text="Excluir" onAction="#btnExcluirCrime" styleClass="button, btn-excluir"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Executar Cometer()" onAction="#btnAcaoCrime" styleClass="button, btn-acao"/>
                                    <Separator orientation="VERTICAL" />
                                    <Button text="Limpar" onAction="#btnLimparCrime" styleClass="button, btn-limpar"/>
                                </HBox>

                                <Label fx:id="lblMsgCrime" style="-fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                                <TableView fx:id="tabCrime" VBox.vgrow="ALWAYS" onMouseClicked="#selecionarCrime">
                                    <columns>
                                        <TableColumn fx:id="colIdCrime" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="colTipoCrime" text="Tipo" />
                                        <TableColumn fx:id="colLocalCrime" text="Local" />
                                        <TableColumn fx:id="colPenaCrime" text="Pena (Anos)" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>